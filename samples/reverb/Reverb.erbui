module Reverb {
   board kivu12
   width 12hp
   material aluminum
   header { label "REVERB" }

   control low_pass_freq_pot Pot {
      position 8.66hp, 28mm
      style rogan.2ps
      label "LP FREQ"
      pin AdcPin8
   }

   control high_pass_freq_pot Pot {
      position 3.33hp, 28mm
      style rogan.2ps
      label "HP FREQ"
      pin AdcPin9
   }

   control feedback_pot Pot {
      position 3.33hp, 54mm
      style rogan.2ps
      label "FEEDBACK"
      pin AdcPin10
   }

   control wet_pot Pot {
      position 8.66hp, 54mm
      style rogan.2ps
      label "DRY/WET"
      pin AdcPin11
   }

   control low_pass_freq_trim Trim {
      mode bipolar
      position 4.66hp, 80.8mm
      style songhuei.9mm
      label "–/+" { positioning top }
      pin AdcPin4
   }

   control high_pass_freq_trim Trim {
      mode bipolar
      position 2hp, 80.8mm
      style songhuei.9mm
      label "–/+" { positioning top }
      pin AdcPin5
   }

   control feedback_trim Trim {
      mode bipolar
      position 7.33hp, 80.8mm
      style songhuei.9mm
      label "–/+" { positioning top }
      pin AdcPin6
   }

   control wet_trim Trim {
      mode bipolar
      position 10hp, 80.8mm
      style songhuei.9mm
      label "–/+" { positioning top }
      pin AdcPin7
   }

   control low_pass_freq_cv CvIn {
      position 4.66hp, 96.5mm
      style thonk.pj398sm.knurled
      label "LP"
      pin AdcPin0
   }

   control high_pass_freq_cv CvIn {
      position 2hp, 96.5mm
      style thonk.pj398sm.knurled
      label "HP"
      pin AdcPin1
   }

   control feedback_cv CvIn {
      position 7.33hp, 96.5mm
      style thonk.pj398sm.knurled
      label "FDBK"
      pin AdcPin2
   }

   control wet_cv CvIn {
      position 10hp, 96.5mm
      style thonk.pj398sm.knurled
      label "DRY/WET"
      pin AdcPin3
   }

   control audio_in_left AudioInDaisy {
      position 2hp, 111mm
      style thonk.pj398sm.knurled
      label "IN L"
      pin AudioInDaisyPinLeft
   }

   control audio_in_right AudioInDaisy {
      position 4.66hp, 111mm
      style thonk.pj398sm.knurled
      label "IN R"
      pin AudioInDaisyPinRight
   }

   control audio_out_left AudioOutDaisy {
      position 7.33hp, 111mm
      style thonk.pj398sm.knurled
      label "OUT L"
      pin AudioOutDaisyPinLeft
   }

   control audio_out_right AudioOutDaisy {
      position 10hp, 111mm
      style thonk.pj398sm.knurled
      label "OUT R"
      pin AudioOutDaisyPinRight
   }
}
